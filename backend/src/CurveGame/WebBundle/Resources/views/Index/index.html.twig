{% extends 'CurveGameWebBundle::base.html.twig' %}

{# Contains header title #}
{% block title %}
    Game
{% endblock %}

{# Contains the page HTML #}
{% block body  %}
    <div id="screens" class="screen-container hidden">
        <section id="instructions"> <!-- Shows game instructions -->
            <div class="slide">
                <h1></h1>
                <a href="#how_to"> <div class="how-To">
                        The How-To box!
                    </div>
                </a>
                <a href="#finished"> <div class="highscore">
                        The Highscore box!
                    </div>
                </a>
                <a href="#about">
                    <div class="aboutbox">
                    The About box!
                    </div>
                </a>
                <a href="#register">
                    <div class="continue">
                    Continue
                    </div>
                </a>
            </div>
        </section>
        <section id="register"> <!-- Shows user registration form -->
            <div class="slide">
                <div class="login_box">
                    <h1>Kies gebruikersnaam</h1>
                    <form id="newUser" class="form-inline">
                        <div class="form-group">
                            <input type="text" class="form-control" id="inputUsername" placeholder="Gebruikersnaam" />
                        </div>
                        <button type="submit" id="sendFormUsername" class="btn btn-default">Ga door!</button>
                    </form>
                </div>
            </div>
        </section>
        <section id="queue"> <!-- Shows the queue -->
            <div class="slide">
                <h1>Wachtrij</h1>
                <p id="positionNum">Fetching queue...</p>
                <div id="readyToPlayContainer">
                    <div id="readyToPlayBtn">
                    </div>
                </div>
            </div>
        </section>
        <section id="play"> <!-- Shows the controls -->
            <div class="slide">
                <h1>Let's play!</h1>
                <div class="buttonbox">
                    <div id="leftControl" class="controls"></div>
                    <div id="rightControl" class="controls"></div>
                </div>
            </div>
        </section>
        <section id="finished"> <!-- Shows the highscores/leaderboard & restart possibility (score reset) -->
            <div class="slide">
                <h1>Highscores</h1>
                <div id="highscores"></div>
            </div>
        </section>
        <section id="about"> <!-- Shows the developers -->
            <div class="slide">
                <h1>This game is made by:</h1>
                <div class="about_box">
                    <div class="about">
                        Trix Beemster
                    </div>
                    <div class="about">
                        Floor van Asten
                    </div>
                    <div class="about">
                        Patrick Luchies
                    </div>
                    <div class="about">
                        Remco Beikes
                    </div>
                    <div class="about">
                        Martijn Buisman
                    </div>
                    <div class="about">
                        Bart Niemijer
                    </div>
                    <div class="about">
                        Wout Sanders
                    </div>
                    <div class="about">
                        Jeroen Mennen
                    </div>
                    <a href="#instructions"><div class="back">
                            Go Back
                        </div>
                    </a>
                </div>
            </div>
        </section>

        <section id="how_to"> <!-- Shows the instructions how to play -->
            <div class="slide">
                <div class="how_to_box">
                    <h1>How to play</h1>
                    <p>
                        You have to use the two controls to controle the space shuttle in the game.
                        use the left button to go left and the right button to go right.
                    </p>
                </div>
                <a href="#instructions"><div class="back">
                        Go Back
                    </div>
                </a>
            </div>
        </section>
    </div>
{% endblock %}