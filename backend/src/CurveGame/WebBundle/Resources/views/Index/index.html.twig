{% extends 'CurveGameWebBundle::base.html.twig' %}

{# Contains header title #}
{% block title %}
{% endblock %}

{# Contains the page HTML #}
{% block body %}
    <div id="screens" class="screen-container hidden">
        <section id="instructions"> <!-- Shows game instructions -->
            <div class="slide">
                <h1>Welkom bij &quot;Achtung die Stenden&quot;</h1>
                <div id="test"><p>Wachtrij fetch</p></div>
                <hr/>
                <div id="controlDebug"><p>Control debug</p></div>
                <hr/>
                <br/>
                <button class="controls" id="leftControl">Links</button>
                <button class="controls" id="rightControl">Rechts</button>
            </div>
        </section>
        <section id="register"> <!-- Shows user registration form -->
            <div class="slide">
                <h1>Kies gebruikersnaam</h1>
                <div id="newUser" class="form-inline">
                    <div class="form-group">
                        <input type="text" class="form-control" id="formUsername" placeholder="Gebruikersnaam" />
                        <button type="submit" id="sendFormUsername" class="btn btn-default">Ga door!</button>
                    </div>
                </div>
            </div>
        </section>
        <section id="queue"> <!-- Shows the queue -->
            <div class="slide">
                <h1>Me too!</h1>
            </div>
        </section>
        <section id="ready"> <!-- Shows the ready action -->
            <div class="slide">
                <h1>I'm slide 4</h1>
            </div>
        </section>
        <section id="play"> <!-- Shows the controls -->
            <div class="slide">
                <h1>I'm on slide 5 :D</h1>
            </div>
        </section>
        <section id="finished"> <!-- Shows the highscores/leaderboard & restart possibility (score reset) -->
            <div class="slide">
                <h1>I'm the last one :(</h1>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function() {
            $("#sendFormUsername").click(function(e) {
                e.preventDefault();
                this.setAttribute("disabled", "disabled");
                var username = $("#formUsername").val();
                alert("Sending username: " + username);
            });
        });
    </script>
{% endblock %}